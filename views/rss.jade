!!!xml
rss(version="2.0")
	channel
		title= title
		link= config.baseURL
		description= config.description
		language= config.language.toLowerCase()
		managingEditor= config.author
		webMaster= config.author.full

		each document in documents
			- var updated = document.updated_at || document.published_on;
			- var published = document.published_on;
			- var time = published || updated;
			if published
				item
					title= document.title
					link= config.baseURL + '/' + document.name
					author= config.author.full
					if document.lead
						description= document.lead
					pubDate= time.format('ddd, D MMM YYYY HH:mm:ss ZZ')
